@model IEnumerable<Proiect_Netficks.Models.User>
@using Microsoft.AspNetCore.Identity
@inject UserManager<Proiect_Netficks.Models.User> UserManager

@{
    ViewData["Title"] = "Gestionare Utilizatori";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-dark text-white shadow-lg border-danger">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="display-4 mb-0">Gestionare Utilizatori</h1>
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-light">
                            <i class="bi bi-arrow-left me-2"></i>Înapoi la Panou
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-people-fill me-2"></i>Lista Utilizatorilor</h4>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Nume</th>
                            <th>Email</th>
                            <th>Tip Abonament</th>
                            <th>Data Înregistrare</th>
                            <th>Roluri</th>
                            <th>Acțiuni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            var roles = await UserManager.GetRolesAsync(user);
                            <tr>
                                <td>@user.Nume</td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge bg-@(user.Tip_Abonament == "Premium" ? "danger" : "secondary")">
                                        @user.Tip_Abonament
                                    </span>
                                </td>
                                <td>@user.Data_Inregistrare.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @foreach (var role in roles)
                                    {
                                        <span class="badge bg-dark me-1">@role</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
