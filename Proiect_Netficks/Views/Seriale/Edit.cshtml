@model Proiect_Netficks.Models.Serial

@{
    ViewData["Title"] = "Editare serial";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1>Editare serial: @Model.Titlu</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Serial_ID" />

                        <div class="form-group mb-3">
                            <label asp-for="Titlu" class="control-label">Titlu</label>
                            <input asp-for="Titlu" class="form-control" />
                            <span asp-validation-for="Titlu" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Gen_ID" class="control-label">Gen</label>
                                    <select asp-for="Gen_ID" class="form-control" asp-items="ViewBag.Gen_ID"></select>
                                    <span asp-validation-for="Gen_ID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="An_Aparitie" class="control-label">An apariție</label>
                                    <input asp-for="An_Aparitie" class="form-control" type="number" min="1900" max="2100" />
                                    <span asp-validation-for="An_Aparitie" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Numar_Sezoane" class="control-label">Număr sezoane</label>
                                    <input asp-for="Numar_Sezoane" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="Numar_Sezoane" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Descriere" class="control-label">Descriere</label>
                            <textarea asp-for="Descriere" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Descriere" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ImagineUrl" class="control-label">URL Imagine</label>
                            <input asp-for="ImagineUrl" class="form-control" />
                            <span asp-validation-for="ImagineUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="TrailerUrl" class="control-label">URL Trailer</label>
                            <input asp-for="TrailerUrl" class="form-control" />
                            <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Înapoi la listă</a>
                            <button type="submit" class="btn btn-play">Salvează modificările</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-5">
                <div class="card-body">
                    <h5 class="card-title">Preview</h5>
                    <div class="movie-card mx-auto">
                        <img src="@(string.IsNullOrEmpty(Model.ImagineUrl) ? "/images/series-placeholder-1.jpg" : Model.ImagineUrl)" class="img-fluid" alt="@Model.Titlu">
                        <div class="mt-2">
                            <h5>@Model.Titlu</h5>
                            <p>@Model.An_Aparitie | @Model.Numar_Sezoane sezoane</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Spațiu suplimentar pentru subsol -->
    <div class="mb-5 pb-5"></div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
