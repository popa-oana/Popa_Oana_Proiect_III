@model Proiect_Netficks.Controllers.AdminStatisticsViewModel

@{
    ViewData["Title"] = "Statistici Platformă";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-dark text-white shadow-lg border-danger">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="display-4 mb-0">Statistici Platformă</h1>
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-light">
                            <i class="bi bi-arrow-left me-2"></i>Înapoi la Panou
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card border-danger shadow text-center h-100">
                <div class="card-body">
                    <i class="bi bi-people-fill text-danger" style="font-size: 3rem;"></i>
                    <h2 class="mt-3 mb-0">@Model.TotalUsers</h2>
                    <p class="text-muted">Utilizatori Totali</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card border-danger shadow text-center h-100">
                <div class="card-body">
                    <i class="bi bi-film text-danger" style="font-size: 3rem;"></i>
                    <h2 class="mt-3 mb-0">@Model.TotalFilms</h2>
                    <p class="text-muted">Filme</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card border-danger shadow text-center h-100">
                <div class="card-body">
                    <i class="bi bi-collection-play text-danger" style="font-size: 3rem;"></i>
                    <h2 class="mt-3 mb-0">@Model.TotalSeries</h2>
                    <p class="text-muted">Seriale</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card border-danger shadow text-center h-100">
                <div class="card-body">
                    <i class="bi bi-star-fill text-danger" style="font-size: 3rem;"></i>
                    <h2 class="mt-3 mb-0">@Model.TotalReviews</h2>
                    <p class="text-muted">Recenzii</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-graph-up me-2"></i>Distribuția Utilizatorilor</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-center">
                        <div class="chart-container" style="position: relative; height:300px; width:300px">
                            <canvas id="userDistributionChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-person-badge me-2"></i>Utilizatori Premium</h4>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>Nume</th>
                                    <th>Email</th>
                                    <th>Data Înregistrare</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.PremiumUsers)
                                {
                                    <tr>
                                        <td>@user.Nume</td>
                                        <td>@user.Email</td>
                                        <td>@user.Data_Inregistrare.ToString("dd.MM.yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const ctx = document.getElementById('userDistributionChart').getContext('2d');
            const userDistributionChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ['Premium', 'Basic'],
                    datasets: [{
                        data: [@Model.PremiumUsers.Count, @Model.BasicUsers.Count],
                        backgroundColor: [
                            '#dc3545',
                            '#6c757d'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                        }
                    }
                }
            });
        });
    </script>
}
