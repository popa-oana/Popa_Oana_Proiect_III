<!-- Call-to-Action Section -->
<section class="cta-section py-5 mb-5">
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h2 class="mb-4">Descoperiți experiența completă Netficks</h2>
                <p class="lead mb-4">Filme, seriale și documentare nelimitate pe toate dispozitivele tale.</p>
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="d-flex justify-content-center gap-3">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-gradient btn-lg">Înscrie-te acum</a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg">Autentifică-te</a>
                    </div>
                }
                else
                {
                    <a asp-controller="Titluri" asp-action="Index" class="btn btn-gradient btn-lg">Explorează biblioteca</a>
                }
            </div>
        </div>
    </div>
</section>

<!-- Admin Panel (only visible to admins) -->
@if (User.IsInRole("Admin"))
{
    <div class="container mt-5 mb-5">
        <div class="card border-primary shadow-lg">
            <div class="card-header bg-gradient">
                <h3 class="card-title mb-0 text-white"><i class="fas fa-shield-alt me-2"></i>Panou Administrator</h3>
            </div>
            <div class="card-body">
                <p class="lead">Ai acces rapid la următoarele funcționalități administrative:</p>
                <div class="d-flex flex-wrap gap-3 mt-3">
                    <a asp-controller="Titluri" asp-action="Create" class="btn btn-gradient"><i class="fas fa-plus-circle me-2"></i>Adaugă titlu nou</a>
                    <a asp-controller="Admin" asp-action="Users" class="btn btn-gradient"><i class="fas fa-users me-2"></i>Gestionare utilizatori</a>
                    <a asp-controller="Admin" asp-action="Stats" class="btn btn-gradient"><i class="fas fa-chart-bar me-2"></i>Statistici</a>
                </div>
            </div>
        </div>
    </div>
}
