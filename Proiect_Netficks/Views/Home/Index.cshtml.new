@model Proiect_Netficks.ViewModels.HomeViewModel
@using Proiect_Netficks.Models
@{
    ViewData["Title"] = "Acasă";
}

<!-- Hero Banner Section -->
<div class="hero-banner mb-5">
    <div class="hero-content container">
        <h1 class="display-4 mb-3">Bine ai venit la Netficks</h1>
        <p class="lead mb-4">Descoperă cele mai noi filme și seriale. Creează-ți propria listă și urmărește conținutul preferat.</p>
        <a asp-controller="Titluri" asp-action="Index" class="btn btn-gradient btn-lg">Explorează</a>
    </div>
</div>

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (User.Identity?.IsAuthenticated == true && Model.Watchlist.Any())
    {
        <section class="content-section mb-5">
            <h2 class="section-title">Lista ta de vizionare</h2>
            <div class="content-slider">
                @foreach (var item in Model.Watchlist)
                {
                    <div class="content-card">
                        @if (item.Film != null)
                        {
                            <a asp-controller="Titluri" asp-action="FilmDetails" asp-route-id="@item.Film.Film_ID" class="content-card-link">
                                <img src="@item.Film.ImagineUrl" class="card-img" alt="@item.Film.Titlu">
                                <div class="content-overlay">
                                    <div class="content-info">
                                        <h5>@item.Film.Titlu</h5>
                                        <div class="d-flex align-items-center">
                                            <span class="badge status-badge @(item.Status == VizionareStatus.Vizionat ? "bg-success" : (item.Status == VizionareStatus.InCurs ? "bg-primary" : "bg-secondary"))">@item.Status</span>
                                            <span class="year-genre ms-2">@item.Film.An_Lansare • @item.Film.Gen?.Nume_Gen</span>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        }
                        @if (item.Serial != null)
                        {
                            <a asp-controller="Titluri" asp-action="SerialDetails" asp-route-id="@item.Serial.Serial_ID" class="content-card-link">
                                <img src="@item.Serial.ImagineUrl" class="card-img" alt="@item.Serial.Titlu">
                                <div class="content-overlay">
                                    <div class="content-info">
                                        <h5>@item.Serial.Titlu</h5>
                                        <div class="d-flex align-items-center">
                                            <span class="badge status-badge @(item.Status == VizionareStatus.Vizionat ? "bg-success" : (item.Status == VizionareStatus.InCurs ? "bg-primary" : "bg-secondary"))">@item.Status</span>
                                            <span class="year-genre ms-2">@item.Serial.An_Aparitie • @item.Serial.Gen?.Nume_Gen</span>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                }
            </div>
        </section>
    }

</div>

<!-- Popular Films Section -->
<section class="content-section mb-5">
    <div class="container">
        <h2 class="section-title">Filme Populare</h2>
        <div class="content-slider">
            @foreach (var film in Model.PopularFilms)
            {
                <div class="content-card">
                    <a asp-controller="Titluri" asp-action="FilmDetails" asp-route-id="@film.Film_ID" class="content-card-link">
                        <img src="@film.ImagineUrl" class="card-img" alt="@film.Titlu">
                        <div class="content-overlay">
                            <div class="content-info">
                                <h5>@film.Titlu</h5>
                                <div class="d-flex align-items-center">
                                    @if (film.Recenzii != null && film.Recenzii.Any())
                                    {
                                        <span class="rating"><i class="fas fa-star text-warning"></i> @film.Recenzii.Average(r => r.Nota).ToString("F1")</span>
                                    }
                                    <span class="year-genre ms-2">@film.An_Lansare • @film.Gen?.Nume_Gen</span>
                                </div>
                                <p class="description">@(film.Descriere != null ? (film.Descriere.Length > 100 ? film.Descriere.Substring(0, 100) + "..." : film.Descriere) : "")</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

