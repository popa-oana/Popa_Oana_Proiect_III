@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - NetFlicks</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proiect_Netficks.styles.css" asp-append-version="true" />
    
    <style>
        .profile-image-navbar {
            width: 32px;
            height: 32px;
            object-fit: cover;
            border-radius: 50%;
            border: 2px solid #dc3545;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black">
            <div class="container">
                <a class="navbar-brand logo" href="/">
                    <span>Net</span>Flicks
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")" asp-controller="Home" asp-action="Index">Acasă</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Caută</a></li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item"><a class="nav-link" href="#">Lista mea</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Top săptămânal</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Abonament</a></li>
                        }
                        <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                        @if (User.IsInRole("Admin") || User.IsInRole("Premium"))
                        {
                            <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Filme" ? "active" : "")" asp-controller="Filme" asp-action="Index">Filme</a></li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Admin" ? "active" : "")" asp-controller="Admin" asp-action="Index">Admin</a></li>
                        }
                    </ul>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @inject UserManager<Proiect_Netficks.Models.User> UserManager
                        
                        var currentUser = await UserManager.GetUserAsync(User);
                        <div class="d-flex align-items-center">
                            <span class="navbar-text me-3">Bine ai revenit!</span>
                            <div class="dropdown">
                                <a class="btn btn-outline-danger dropdown-toggle" href="#" role="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    @if (currentUser != null && !string.IsNullOrEmpty(currentUser.ProfileImagePath))
                                    {
                                        <img src="@currentUser.ProfileImagePath" alt="Profil" class="profile-image-navbar">
                                    }
                                    else
                                    {
                                        <i class="bi bi-person-circle"></i>
                                    }
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profilul meu</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form class="dropdown-item p-0" asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="btn btn-link text-danger w-100 text-start">Deconectare</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex">
                            <a class="btn btn-outline-light me-2" asp-controller="Account" asp-action="Login">Autentificare</a>
                            <a class="btn btn-danger" asp-controller="Account" asp-action="Register">Înregistrare</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center">
        <div class="container">
            &copy; @DateTime.Now.Year - NetFlicks - <a class="text-muted" asp-controller="Home" asp-action="Privacy">Confidențialitate</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>