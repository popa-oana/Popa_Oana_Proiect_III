@model Proiect_Netficks.ViewModels.ContactViewModel
@{
    ViewData["Title"] = "Contact";
}

<div class="container">
    <div class="row mb-5">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-white mb-4">Contact</h1>
            <div class="card bg-dark text-white">
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <p class="lead">Ai întrebări sau sugestii? Completează formularul de mai jos și te vom contacta în cel mai scurt timp.</p>
                    
                    <form asp-action="SubmitContact" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Subject" class="form-label"></label>
                            <input asp-for="Subject" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Message" class="form-label"></label>
                            <textarea asp-for="Message" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        
                        <button type="submit" class="btn-gradient w-100">Trimite mesaj</button>
                    </form>
                </div>
            </div>
            
            <div class="card bg-dark text-white mt-4">
                <div class="card-header bg-gradient">
                    <h3 class="mb-0">Informații de contact</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5><i class="bi bi-envelope-fill me-2"></i>Email</h5>
                            <p>support@netflicks.ro</p>
                            
                            <h5><i class="bi bi-telephone-fill me-2"></i>Telefon</h5>
                            <p>+40 700 123 456</p>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="bi bi-geo-alt-fill me-2"></i>Adresă</h5>
                            <p>
                                Str. Streaming nr. 42<br>
                                București, România
                            </p>
                            
                            <h5><i class="bi bi-clock-fill me-2"></i>Program</h5>
                            <p>Luni - Vineri: 9:00 - 18:00</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-white mb-4">Întrebări frecvente</h2>
            <div class="accordion" id="faqAccordion">
                <div class="accordion-item bg-dark text-white">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                            Cum pot să îmi creez un cont?
                        </button>
                    </h2>
                    <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Pentru a crea un cont, apăsați butonul "Înregistrare" din colțul din dreapta sus al paginii. Completați formularul cu datele personale și urmați instrucțiunile de pe ecran.
                        </div>
                    </div>
                </div>

                <div class="accordion-item bg-dark text-white">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                            Cum pot adăuga un film în lista mea?
                        </button>
                    </h2>
                    <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Navigați la pagina filmului dorit și apăsați butonul "Adaugă în listă". Filmul va apărea în secțiunea "Lista mea" din meniul principal.
                        </div>
                    </div>
                </div>

                <div class="accordion-item bg-dark text-white">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                            Cum pot vizualiza istoricul vizionărilor?
                        </button>
                    </h2>
                    <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Accesați secțiunea "Istoric vizionări" din meniul principal pentru a vedea toate filmele și serialele pe care le-ați vizionat.
                        </div>
                    </div>
                </div>

                <div class="accordion-item bg-dark text-white">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                            Cum pot căuta un film sau serial specific?
                        </button>
                    </h2>
                    <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Utilizați secțiunea "Caută" din meniul principal. Puteți căuta după titlu, gen sau an de lansare.
                        </div>
                    </div>
                </div>

                <div class="accordion-item bg-dark text-white">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq5">
                            Cum pot modifica setările contului meu?
                        </button>
                    </h2>
                    <div id="faq5" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Accesați secțiunea "Setări" din meniul principal pentru a modifica informațiile contului, preferințele de notificări și alte setări personale.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient {
        background: linear-gradient(90deg, #d32f2f, #1976d2);
    }
    
    .btn-gradient {
        background: linear-gradient(90deg, #d32f2f, #1976d2);
        border: none;
        color: white;
        font-weight: bold;
        padding: 12px;
        border-radius: 5px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .btn-gradient:hover {
        background: linear-gradient(90deg, #1976d2, #d32f2f);
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.3);
        transform: translateY(-2px);
    }

    .accordion-button:not(.collapsed) {
        color: white;
        background: linear-gradient(90deg, #d32f2f, #1976d2);
    }

    .accordion-button:focus {
        box-shadow: none;
        border-color: rgba(255, 255, 255, 0.125);
    }

    .accordion-item {
        border: 1px solid rgba(255, 255, 255, 0.125);
    }

    .accordion-button::after {
        filter: invert(1);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
